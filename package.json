{
    "private": true,
    "dependencies": {
        "apache-server-configs": "^2",
        "normalize.css": "^7"
    },
    "devDependencies": {
        "autoprefixer": "*",
        "mkdirp": "*",
        "mustache": "*",
        "node-sass": "*",
        "nps": "*",
        "onchange": "*",
        "postcss-cli": "*",
        "rimraf": "*"
    },
    "scripts": {
        "watch": "npm run build && onchange 'web/**/*' --wait -- npm run build",
        "build": "nps build",
        "postinstall": "cd 'node_modules/normalize.css' && if [ -f 'normalize.css' ]; then mv 'normalize.css' '_normalize.scss'; fi",
        "clean": "nps clean"
    }
}
