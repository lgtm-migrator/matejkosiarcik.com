{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],

      "declaration": true,
      "rootDir": "web/script",

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
}
